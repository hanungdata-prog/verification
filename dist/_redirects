# Discord OAuth routes - preserve path using query parameter
/discord/login    /.netlify/functions/api?route=/discord/login    200
/discord/callback    /.netlify/functions/api?route=/discord/callback    200
/discord/*    /.netlify/functions/api?route=/discord/:splat    200

# API routes to serverless functions
/api/*    /.netlify/functions/api/:splat    200

# Verification routes to serverless functions
/verify*    /.netlify/functions/api/:splat    200
/admin/*    /.netlify/functions/api/:splat    200

# Static files - serve directly
/static/*    /static/:splat    200
/public/*    /public/:splat    200

# Privacy policy and other static pages
/privacy    /privacy.html    200
/verify.html    /verify.html    200
/verify-auto.html    /verify-auto.html    200

# Root route
/    /index.html    200

# Default fallback for SPA routing (index.html)
/*    /index.html    200